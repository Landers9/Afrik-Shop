<div class="small-container cart-page">
    <h2 class="title">Ckeckout / Orders</h2>

    <table>
      <tr>
        <th>id</th>
        <th>Username</th>
        <th>Telephone</th>
        <th>Address</th>
        <th>Quantity of products</th>
        <th>Total price</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
      <% @orders.each do |o| %>
        <tr>
          <td>
            <%= o.id %>
          </td>
          <td>
            <%= o.user.username %>
          </td>
          <td>
            <%= o.user.telephone %>
          </td>
          <td>
            <%= o.user.address %>
          </td>
          <td>
            <%= o.qt_product %>
          </td>
          <td>
            <%= o.total_price %>
          </td>
          <td>
            <% if o.status == "progress" %>
              <p style="color:#FAC800"><%= o.status %></p>
            <%else%>
              <p style="color:#00FA00"><%= o.status %></p>
            <%end%>
          </td>
          <td>
            <%= link_to "Delete", delete_order_path(id: o.id), method: :delete%>
          </td>
        </tr>
      <% end %>
    </table>
</div>

