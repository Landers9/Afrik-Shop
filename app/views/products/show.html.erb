<div class="small-container" style="margin-top:20px;">
  <h2 class="title">Details product</h2>
</div>
<section class="product-details">
  <div class="image-details">
    <img src="<%= @product.image.url %>" alt="" width="100%">
  </div>

  <div class="text-details">
    <h1 class="product-title"> <%= @product.name %> </h1>
    <h4>Details products</h4>
    <p class="product-description"> <%= @product.description %> </p>
    <span class="product-price">Price: <%= @product.price %></span>

    <div class="btn-cart">
      <%= link_to "Add to Cart", add_cart_path(id: @product.id), class:"button", style:"background-color: #3296C8;" %>
    	<a href="<%= products_path %>" class="button" style="background-color: #C7325A;">Go to Shop</a>
    </div>
  </div>
</section>

<div class="small-container others">
  <h2 class="title" id="products">Others products</h2>
  <div class="row">
    <% Product.limit(4).each do |p| %>
      <div class="col-4">
        <a href="<%= product_path(p) %>">
          <img src="<%= p.image.url %>" alt="">
        </a>
        <h4><%= p.name %></h4>
        <div class="rating">
          <i class='bx bxs-star'></i>
          <i class='bx bxs-star'></i>
          <i class='bx bxs-star'></i>
          <i class='bx bxs-star'></i>
          <i class='bx bx-star' ></i>
        </div>
        <p><%= p.price %> $</p>
      </div>
    <% end %>
  </div>
</div>

