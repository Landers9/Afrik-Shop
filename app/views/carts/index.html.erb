<!------Carts page-------->
<div class="small-container cart-page">
    <h2 class="title">Cart</h2>
   <table>
     <tr>
       <th>Product</th>
       <th>Quantity</th>
       <th>Subtotal</th>
     </tr>
     <% @carts.each do |c| %>
       <tr>
         <td>
           <div class="cart-info">
             <img src="<%= c.product.image.url %>" alt="">
             <div>
               <p><%= c.product.name %></p>
               <small>Price: <%= c.product.price %></small>
               <br>
               <%= link_to "Remove", delete_cart_path(id: c.product.id), method: :delete%>
             </div>
           </div>
         </td>
         <td>
          <%= form_for(c) do |f| %>
            <div class="field">
              <%= f.number_field :quantity, class:"quantity", in: 1..20, step: 1%>
            </div>

            <div class="field">
              <%= hidden_field_tag "id", c.product.id  %>
            </div>

            <div class="actions">
              <%= f.submit "Update", class:"btn-update" %>
            </div>
          <% end %>
         </td>
         <td>
           <%= c.total_price %>
         </td>
       </tr>
     <% end %>
   </table>

   <div class="total-price">
     <table>
       <tr>
         <td>Subtotal</td>
         <td><%= @subtotal %>$</td>
       </tr>
       <tr>
         <td>Tax</td>
         <td><%= @tax %>$</td>
       </tr>
       <tr>
         <td>Total</td>
         <td><%= @total %>$</td>
       </tr>
     </table>
   </div>

   <% if @total > 20 %>
     <a href="<%= add_order_path(indice: @total) %>", class="btn-update valid">Validate</a>
   <% else %>
     <p style="color:red;">Clique to update</p>
   <% end %>

</div>

