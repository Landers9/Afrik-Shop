<div class="account-page">
  <div class="container">
    <div class="row">
      <div class="col-2">
        <%= image_tag("shopLogin.png", :alt => "img", width:"83%") %>
        <!-- <img src="/assets/shopLogin.png" alt="" width="83%"> -->
      </div>

      <div class="col-2">
        <div class="form-container">
          <div class="form-btn">
            <br>
            <span>Password forgot?</span>
            <hr id="underline">
          </div>

          <br>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", placeholder:"Email" %>
            </div>

            <br>

            <div class="actions">
              <%= f.submit "Reset password", class:"btn input"%>
            </div>
          <% end %>

          <br>

          <%= render "devise/shared/links" %>

          <br>
        </div>
      </div>
    </div>
  </div>
</div>
