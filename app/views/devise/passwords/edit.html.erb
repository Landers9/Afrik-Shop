<div class="account-page">
  <div class="container">
    <div class="row">
      <div class="col-2">
        <%= image_tag("shopLogin2.png", :alt => "img", width:"83%") %>
        <!-- <img src="/assets/shopLogin2.png" alt="" width="83%"> -->
      </div>

      <div class="col-2">
        <div class="form-container">
          <div class="form-btn">
            <span>Change your password</span>
            <hr id="underline">
          </div>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field">
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder:"New password (6 characters min)", class:"input"%>
            </div>

            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm new password", class:"input"%>
            </div>

            <div class="actions">
              <%= f.submit "Change my password", class:"btn input"%>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>
